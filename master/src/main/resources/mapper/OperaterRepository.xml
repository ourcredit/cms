<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.monkey.core.mapper.OperaterRepository">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.monkey.core.entity.Operater">
        <id column="id" property="id" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="openId" property="openId" />
        <result column="creationTime" property="creationTime" />
        <result column="creatorUserId" property="creatorUserId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, account, password, openId, creationTime, creatorUserId
    </sql>
    <select id="selectOperaterList" resultType="com.monkey.core.entity.Operater">
        SELECT
	a.id,
	a.account,
	a.openId,
	a.PASSWORD,
	a.creationTime,
	a.creatorUserId,
	a.orderCount,
	a.NAME,
	b.NAME AS region
FROM
	sale_operater a
	left JOIN sale_region b ON a.region = b.CODE
	<where>
        <if test="name!=null">
            a.name like '%${name}%'
        </if>
    </where>
    </select>

</mapper>
