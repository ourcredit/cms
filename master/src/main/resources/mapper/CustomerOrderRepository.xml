<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.monkey.core.mapper.CustomerOrderRepository">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.monkey.core.entity.CustomerOrder">
        <id column="id" property="id" />
        <result column="openId" property="openId" />
        <result column="dryType" property="dryType" />
        <result column="customerName" property="customerName" />
        <result column="mobile" property="mobile" />
        <result column="area" property="area" />
        <result column="community" property="community" />
        <result column="address" property="address" />
        <result column="orderState" property="orderState" />
        <result column="payState" property="payState" />
        <result column="isTime" property="isTime" />
        <result column="creationTime" property="creationTime" />
        <result column="creatorUserId" property="creatorUserId" />
        <result column="price" property="price" />
        <result column="orderNum" property="orderNum" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, openId, dryType, customerName, mobile, area, community, address, orderState, payState, deviceId, isTime, creationTime, creatorUserId, price, orderNum
    </sql>
    <select id="selectCustomerOrderList" resultType="com.monkey.core.entity.CustomerOrder">
SELECT
	*
FROM
	sale_customerOrder
WHERE 1=1
  <if test="operaterId!=null"> and	operaterId = ${operaterId}  </if>
	AND payState = 1
	AND orderState = 1
	AND id NOT IN ( SELECT customerOrder FROM sale_order WHERE payState = 1 AND orderState = 1 )
    </select>

</mapper>
